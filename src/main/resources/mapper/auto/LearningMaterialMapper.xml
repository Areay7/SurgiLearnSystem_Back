<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.discussio.resourc.mapper.auto.LearningMaterialMapper">
    <resultMap id="BaseResultMap" type="com.discussio.resourc.model.auto.LearningMaterial">
        <id column="id" jdbcType="BIGINT" property="id"/>
        <result column="title" jdbcType="VARCHAR" property="title"/>
        <result column="description" jdbcType="VARCHAR" property="description"/>
        <result column="category" jdbcType="VARCHAR" property="category"/>
        <result column="tags" jdbcType="VARCHAR" property="tags"/>
        <result column="file_type" jdbcType="VARCHAR" property="fileType"/>
        <result column="file_size" jdbcType="BIGINT" property="fileSize"/>
        <result column="file_path" jdbcType="VARCHAR" property="filePath"/>
        <result column="original_name" jdbcType="VARCHAR" property="originalName"/>
        <result column="uploader_id" jdbcType="VARCHAR" property="uploaderId"/>
        <result column="uploader_name" jdbcType="VARCHAR" property="uploaderName"/>
        <result column="view_count" jdbcType="INTEGER" property="viewCount"/>
        <result column="download_count" jdbcType="INTEGER" property="downloadCount"/>
        <result column="status" jdbcType="VARCHAR" property="status"/>
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
        <result column="update_time" jdbcType="TIMESTAMP" property="updateTime"/>
    </resultMap>

    <select id="selectLearningMaterialById" parameterType="java.lang.Long" resultMap="BaseResultMap">
        SELECT * FROM learning_materials WHERE id = #{id}
    </select>
</mapper>
