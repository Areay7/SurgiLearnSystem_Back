<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.discussio.resourc.mapper.auto.ResourceSharingMapper">
    <resultMap id="BaseResultMap" type="com.discussio.resourc.model.auto.ResourceSharing">
        <id column="id" jdbcType="BIGINT" property="id" />
        <result column="resource_id" jdbcType="BIGINT" property="resourceId" />
        <result column="resource_name" jdbcType="VARCHAR" property="resourceName" />
        <result column="resource_type" jdbcType="VARCHAR" property="resourceType" />
        <result column="upload_date" jdbcType="TIMESTAMP" property="uploadDate" />
        <result column="upload_user" jdbcType="VARCHAR" property="uploadUser" />
        <result column="download_count" jdbcType="INTEGER" property="downloadCount" />
        <result column="resource_desc" jdbcType="VARCHAR" property="resourceDesc" />
        <result column="file_path" jdbcType="VARCHAR" property="filePath" />
        <result column="is_approved" jdbcType="INTEGER" property="isApproved" />
        <result column="approval_date" jdbcType="TIMESTAMP" property="approvalDate" />
    </resultMap>

    <select id="selectResourceSharingById" parameterType="java.lang.Long" resultMap="BaseResultMap">
        SELECT * FROM resource_sharing WHERE id = #{id}
    </select>

    <select id="selectResourceSharingListByResourceType" parameterType="java.lang.String" resultMap="BaseResultMap">
        SELECT * FROM resource_sharing WHERE resource_type = #{resourceType}
    </select>
</mapper>
