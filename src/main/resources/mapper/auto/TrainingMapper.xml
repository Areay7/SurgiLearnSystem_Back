<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.discussio.resourc.mapper.auto.TrainingMapper">
    <resultMap id="BaseResultMap" type="com.discussio.resourc.model.auto.Training">
        <id column="id" jdbcType="BIGINT" property="id" />
        <result column="training_id" jdbcType="BIGINT" property="trainingId" />
        <result column="training_name" jdbcType="VARCHAR" property="trainingName" />
        <result column="training_type" jdbcType="VARCHAR" property="trainingType" />
        <result column="description" jdbcType="LONGVARCHAR" property="description" />
        <result column="start_date" jdbcType="TIMESTAMP" property="startDate" />
        <result column="end_date" jdbcType="TIMESTAMP" property="endDate" />
        <result column="instructor_id" jdbcType="VARCHAR" property="instructorId" />
        <result column="instructor_name" jdbcType="VARCHAR" property="instructorName" />
        <result column="max_participants" jdbcType="INTEGER" property="maxParticipants" />
        <result column="current_participants" jdbcType="INTEGER" property="currentParticipants" />
        <result column="status" jdbcType="VARCHAR" property="status" />
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
        <result column="update_time" jdbcType="TIMESTAMP" property="updateTime" />
    </resultMap>

    <select id="selectTrainingById" parameterType="java.lang.Long" resultMap="BaseResultMap">
        SELECT * FROM training WHERE id = #{id}
    </select>

    <select id="selectTrainingListForStudent" resultMap="BaseResultMap">
        SELECT t.* FROM training t
        WHERE 1=1
        <if test="searchText != null and searchText != ''">
            AND (t.training_name LIKE CONCAT('%', #{searchText}, '%') OR t.description LIKE CONCAT('%', #{searchText}, '%'))
        </if>
        <if test="trainingType != null and trainingType != ''">
            AND t.training_type = #{trainingType}
        </if>
        <if test="status != null and status != ''">
            AND t.status = #{status}
        </if>
        AND (
            NOT EXISTS (SELECT 1 FROM training_class tc WHERE tc.training_id = t.id)
            OR EXISTS (
                SELECT 1 FROM training_class tc
                INNER JOIN teaching_class_student tcs ON tcs.class_id = tc.class_id AND tcs.student_id = #{studentId}
                WHERE tc.training_id = t.id
            )
        )
        ORDER BY t.update_time DESC
    </select>
</mapper>

